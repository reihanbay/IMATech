<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".smartdiagnosis.SmartDiagnosisActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chatbot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_message"
        />
    <LinearLayout
        android:id="@+id/ll_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:elevation="5dp"
        android:background="@drawable/item_bottom_sheet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <View
            android:background="@drawable/item_btn_answer"
            android:layout_gravity="center"
            android:backgroundTint="@color/grey_text"
            android:layout_width="40dp"
            android:layout_height="6dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:visibility="gone"
            android:layout_marginHorizontal="6dp"/>
        <EditText
            android:id="@+id/et_answer_smart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_edit_text"
            android:layout_marginVertical="20dp"
            android:hint="@string/answer"
            android:textSize="14sp"
            android:inputType="text"
            android:layout_marginHorizontal="6dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="11dp"
            android:autofillHints="" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>