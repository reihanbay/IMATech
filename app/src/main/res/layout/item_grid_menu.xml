<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_menu"
    android:layout_width="156dp"
    android:layout_height="110dp"
    android:maxHeight="110dp"
    android:background="@drawable/item_container_menu"
    android:elevation="4dp"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="7dp"
    android:padding="7dp">

    <ImageView
        android:id="@+id/iv_icon_menu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="33dp"
        android:src="@drawable/ic_smart_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Sambungan Gadget"
        android:maxLines="2"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_icon_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>